<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cricket Scoreboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        html, body {
    overflow-x: hidden;
    margin: 0;
    padding: 0;
    
}

    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-image: linear-gradient(to right bottom, #052652, #124173, #1d5d95, #257cb8, #2d9cdb);
    overflow-x: hidden;
    box-sizing: border-box;
    height: 100vh;
}

.score-section {
    /* background-image: url(https://res.cloudinary.com/dykvdhxke/image/upload/v1742625465/Rectangle_3_eunref.png); */

    background-size: cover;
   display: flex;
    justify-content: center;
    align-items: center;
    padding: 0px;
    width: 100%;
    text-align: center;
    color: white;
    flex-direction: column;
    /* backdrop-filter: blur(15.75px); */
}

.team-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.score-card {
    margin: 10px;
    text-align: center;
}

.score-card h3 {
    margin: 5px 0;
    color: white;
    display: inline;
}

.score-card h3 span {
    font-size: 14px;
}

.score-card h4 {
    margin-top: 5px;
    color: white;
}
/* vs  */
@media (max-width: 320px) {
    .team-container {
        flex-direction: column; /* ✅ Column me convert karega sirf 320px par */
        
    }

    .vs-text {
        margin: 5px 0; /* ✅ VS ke upar-niche spacing */
        display: block; /* ✅ Taaki "VS" center me dikhai de */
    }
}
/* vs end*/
.match-info {
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    margin-top: 10px;
}

.match-line {
    background: rgba(255, 255, 255, 0.2);
    padding: 6px 15px;
    border-radius: 20px;
    display: inline-block;
    margin-bottom: 5px;
    
}
/* ✅ Mobile Responsive - Match Line Width 80% */
@media (max-width: 600px) {
    .match-line {
        width: 80%;
        text-align: center;
        margin: auto;
        
    }
}


/* TABS SECTION */
.tabs {
    margin: 15px auto;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    justify-content: center;
    align-items: center;
    background-image: radial-gradient(circle, #6e88a6, #5c86b8, #4883ca, #327fdc, #1b7aec);
    padding: 5px;
    border-radius: 25px;
    width: 50%;
    text-align: center;
    max-width: 100%;
}
/* ✅ Mobile Responsive - Tabs Width 80% */
@media (max-width: 768px) {
    .tabs {
        /* max-width: 90%;
        border-radius: 25px; */
        display: none;
        margin-top: 15px;
    }
    
.team-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 100%;
}


@media (max-width: 425px) {
    .team-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
    }
}

@media (max-width: 325px) {
    .team-container {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        width: 70%;
    }
}


}

.tab {
    flex: 1 1 auto;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: bold;
    border-radius: 20px;
    text-transform: uppercase;
    color: black;
    background: transparent;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    text-align: center;
    min-width: 100px;
    
}

.tab:hover {
    background: white;
    color: black;
    transform: scale(1.05);
    
}

/* RESPONSIVE TABS */
@media (max-width: 1024px) {
    .tabs {
        
        width: 70%;
    }
}

@media (max-width: 768px) {
    .tabs {
        width: 90%;
        flex-wrap: wrap;
        justify-content: center;
    }
    .tab {
        flex: 1 1 45%;
        padding: 10px;
        font-size: 14px;
    }
}

@media (max-width: 600px) {
    .tabs {
        
        width: 100%;
        flex-direction: column;
    }
    .tab {
        width: 80%;
        padding: 10px;
        font-size: 13px;
    }
}

/* TABLE */
.table {
    width: 70%;
    border-collapse: collapse;
    background-image: linear-gradient(to right, #0a3361, #0a4482, #0b56a4, #1168c7, #1b7aec);
    color: white;
    border-radius: 10px;
    overflow: hidden;
    margin: auto;
    max-width: 100%;
}

.table th, .table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.table th {
    background: rgba(255, 255, 255, 0.2);
    text-transform: uppercase;
}

.table tr:last-child td,
.table tr:nth-last-child(2) td {
    background: white;
    color: black;
    font-weight: bold;
}

/* RESPONSIVE TABLE */
@media (max-width: 768px) {
    .table {
        margin-top: 15px;
        width: 90%;
    }
    .table th, .table td {
        padding: 8px;
        font-size: 14px;
    }
}




/* LAST 6 BALLS */
.last-6-balls {
    width: 70%;
    margin: 20px auto;
    border-radius: 10px;
    overflow: hidden;
    background: white;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    max-width: 100%;
}

.table-header {
    background-image: linear-gradient(to right, #0a3361, #0a4482, #0b56a4, #1168c7, #1b7aec);
    color: white;
    text-align: center;
    padding: 8px;
    font-size: 18px;
    font-weight: bold;
}

.table-body {
    display: flex;
    justify-content: center; /* Center align */
    gap: 8px;
    padding: 10px;
    background: #ffffff;
    flex-wrap: nowrap; /* ✅ Wrap ko disable kar diya */
    overflow-x: auto; /* ✅ Chhoti screen par scroll enable */
    white-space: nowrap; /* ✅ Text wrap bhi disable */
}

.ball {
    width: 40px;
    height: 40px;
    background: #ff6633;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 16px;
    font-weight: bold;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
}


@media (max-width: 768px) {
    .ball {
        width: 30px;
        height: 30px;
        font-size: 16px;
    }
}




    </style>
</head>
<body>

<!-- Header Section -->
<header style="background: rgba(5, 38, 82, 0.5); color: white; display: flex; align-items: center; justify-content: space-between; padding: 10px 20px; backdrop-filter: blur(10px);">
    <img src="https://res.cloudinary.com/dqfnwh89v/image/upload/v1743412704/Group_3989809_dlobkd.png" alt="Logo" style="height: 50px;">
    <span style="flex: 1; text-align: center; font-size: 24px; font-weight: bold;"><%= matchTitle || "Match Title Not Available" %></span>
    <div id="live-score" style="font-size: 18px;"></div>
</header>




    <div class="score-section">
        <div class="team-container">
            <div class="score-card">
                <h3><%= currentScore?.[0]?.score || "N/A" %></h3>
                <h4><%= currentScore?.[0]?.team || "Team 1" %></h4>
            </div>
            <h2 style="color:white;">VS</h2>
            <div class="score-card">
                <h3><%= currentScore?.[1]?.score || "N/A" %></h3>
                <h4><%= currentScore?.[1]?.team || "Team 2" %></h4>
            </div>
        </div>

        <!-- Match Info -->
        <!-- <div class="match-info">
            <div class="match-line"><%= matchTitle || "Match Title Not Available" %></div>
        </div> -->
        <div class="match-line" style="margin-top: 10px;margin-bottom: 10px;">
            <strong><%= matchStatus || "Match Status Not Available" %></strong>
        </div>
    </div>

    <!-- <div class="tabs">
        <div class="tab">Live</div>
        <div class="tab">Info</div>
        <div class="tab">Squad</div>
        <div class="tab">Point Table</div>
        <div class="tab">Score Card</div>
    </div> -->

    <div class="content" style="margin-top: 1%;">
        <!-- Batsman Table -->
        <table class="table">
            <tr>
                <th>Batsman</th>
                <th>R</th>
                <th>B</th>
                <th>4s</th>
                <th>6s</th>
                <th>SR</th>
            </tr>
            <% if (batsmen?.length) { %>
                <% batsmen.forEach(batsman => { %>
                <tr>
                    <td><%= batsman.name || "N/A" %></td>
                    <td><%= batsman.runs || "0" %></td>
                    <td><%= batsman.balls || "0" %></td>
                    <td><%= batsman.fours || "0" %></td>
                    <td><%= batsman.sixes || "0" %></td>
                    <td><%= batsman.strikeRate || "0.00" %></td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr><td colspan="6">No batting data available</td></tr>
            <% } %>
        </table>

        <!-- Bowler Table -->
        <table class="table" style="margin-top: 12px;">
            <tr>
                <th>Bowler</th>
                <th>O</th>
                <th>M</th>
                <th>R</th>
                <th>W</th>
                <th>Eco</th>
            </tr>
            <% if (bowlers?.length) { %>
                <% bowlers.forEach(bowler => { %>
                <tr>
                    <td><%= bowler.name || "N/A" %></td>
                    <td><%= bowler.overs || "0.0" %></td>
                    <td><%= bowler.maidens || "0" %></td>
                    <td><%= bowler.runs || "0" %></td>
                    <td><%= bowler.wickets || "0" %></td>
                    <td><%= bowler.economy || "0.00" %></td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr><td colspan="6">No bowling data available</td></tr>
            <% } %>
        </table>

        <!-- Last 6 Balls Section -->
        <div class="last-6-balls">
            <div class="table-header">LAST 6 BALLS</div>
            <div class="table-body">
                <% if (lastOver?.trim()) { %>
                    <% lastOver.split(" ").forEach(ball => { %>
                        <div class="ball"><%= ball || "-" %></div>
                    <% }) %>
                <% } else { %>
                    <div class="ball">No data</div>
                <% } %>
            </div>
        </div>
    </div>
</body>



</html>